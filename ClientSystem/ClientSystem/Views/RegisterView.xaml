<Window x:Class="ClientSystem.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientSystem.Views"
        mc:Ignorable="d"
        Title="注册" Height="450" Width="800">
    <Grid Background="#ffee">
        <StackPanel Margin="294,112,250,93">
            <DockPanel>
                <Label Content="用户名"></Label>
                <TextBox x:Name="userName"></TextBox>
            </DockPanel>

            <DockPanel>
                <Label Content="密码"></Label>
                <TextBox x:Name="passWord"></TextBox>
            </DockPanel>
            <Button x:Name="register" Content="注册" Click="register_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
